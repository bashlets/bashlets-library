BASHLETS_NAME=bashlets
BASHLETS_BASE=~/.bashlets
BASHLETS_LOADER_2ND_STAGE="${BASH_SOURCE[0]}"
BASHLETS_NAMESPACE=bash$$
BASHLETS_NAMESPACE_QUOTED=bash\$\$
BASHLETS_ERRORS_LOADING_ERROR=1


function bashlet2_import_lazy()
{
    local bashlet="$1" file

    type bashlets_library_loader_import > /dev/null 2>&1 || {
        [[ $bashlet != "library/loader" ]] && 
            bashlet2_import_lazy "library/loader"
    }

    file="$BASHLETS_BASE/${BASHLETS_REV:-DEFAULT}/lib/$bashlet"

    source "$file"
}

function bashlet2_import()
{
    local bashlet="$1"

    bashlet2_import_lazy $bashlet            \
        || return $BASHLETS_ERRORS_LOADING_ERROR

    bashlets_library_loader_import $bashlet  \
        || return $BASHLETS_ERRORS_LOADING_ERROR
}


# check if we are being sourced
[[ "$BASHLETS_LOADER_2ND_STAGE" != "$0" ]] || {
    echo "[$BASHLETS_NAME] Second-stage loader must be sourced!" >&2
    exit $BASHLETS_ERRORS_LOADING_ERROR
}

# ``parse'' command line
[[ $# != 1 ]] && {
    echo "[$BASHLETS_NAME] Loader usage: bashlet <BASHLET>" >&2
    return $BASHLETS_ERRORS_LOADING_ERROR
}

# library entry point
bashlet2_import "$1" || {
    echo "[$BASHLETS_NAME] Generic loader error!" >&2
    return $BASHLETS_ERRORS_LOADING_ERROR
}


# Local variables:
# mode: shell-script
# sh-basic-offset: 4
# sh-indent-comment: t
# indent-tabs-mode: nil
# End:
# ex: ts=4 sw=4 et filetype=sh
