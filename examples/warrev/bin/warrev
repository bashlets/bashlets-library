################################################################################
#
# warrev
#
#
# Purpose:
#
#    get/set revision for WAR files
#
# Environment variables:
#
#    none
#
# Example of call:
#
#    warrev --get-revision <WARFILE>
#    warrev --set-revision <REVISION> <WARFILE>
#
################################################################################


#
# library modules/plugins
################################################################################

source bashlet basic/myself
source bashlet filetype/zip


#
# global variables
################################################################################

# script version
WARREV_VERSION='0.1'
# revision marker
WARREV_REVISION_MARKER="WARREVISION"


#
# utilities
################################################################################

#
# warrev_get_revision
#
#
# Purpose:
#
#    get revision of the WAR file
#
# Example of call:
#
#     get_war_revision warfile
#
# Local variables:
#
#     warfile, comment
#

function warrev_get_revision()
{
    local warfile="$1"
    local comment

    $BASHLETS_NAMESPACE zip get_comment_by_key "$warfile" "$WARREV_REVISION_MARKER"
}


#
# warrev_set_revision
#
#
# Purpose:
#
#    set revision of the WAR file
#
# Example of call:
#
#    warrev_get_revision warfile revision
#
# Local variables:
#
#    warfile, revision, comment
#

function warrev_set_revision()
{
    local warfile="$1"
    local revision="$2"

    $BASHLETS_NAMESPACE zip set_comment_by_key "$warfile" "$WARREV_REVISION_MARKER" "$revision"
}


#
# warrev_check_warfile
#
#
# Purpose:
#
#    check for WAR file existence (and sanity, TODO)
#
# Example of call:
#
#    warrev_check_warfile warfile
#
# Local variables:
#
#    warfile
#

function warrev_check_warfile()
{
    local warfile="$1"
    [[ -f $warfile ]]
}


#
# warrev_usage
#
#
# Purpose:
#
#    prints usage information
#
# Example of call:
#
#    warrev_usage
#
# Local variables:
#
#    none
#

function warrev_usage()
{
    echo "Get or set WAR revision.  Usage: "
    echo "    $($BASHLETS_NAMESPACE myself get_name) --get-revision <WARFILE>"
    echo "    $($BASHLETS_NAMESPACE myself get_name) --set-revision <REVISION> <WARFILE>"
}


#
# main loop
################################################################################

if [ $# -lt 2 ]
then
    warrev_usage
    exit 1
fi

if [ "$1" == "--get-revision" ]
then
    warrev_check_warfile $2 || { echo "ERROR on WAR file!" ; exit 1 ; }
    warrev_get_revision $2
    exit 0

elif [ "$1" == "--set-revision" ]
then
    if [ $# -lt 3 ]; then
        warrev_usage
        exit 1
    fi
    warrev_check_warfile $3 || { echo "ERROR on WAR file!" ; exit 1 ; }
    warrev_set_revision $3 $2
    exit 0
fi


warrev_usage
exit 1

# ex: ts=4 sw=4 et filetype=sh
