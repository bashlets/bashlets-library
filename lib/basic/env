#@method
function bashlets_basic_env_list()
{
    env                                                            \
        | grep -o '^[_[:alpha:]][_[:alnum:]]*'                     \
        | grep -v -E '^PATH$|^PWD$|^USER$|^TERM$|^SSH_.*|^LC_.*'
}


#@method
function bashlets_basic_env_list_full()
{
    env                                                            \
        | grep -o '^[_[:alpha:]][_[:alnum:]]*'
}


#@method
function bashlets_basic_env_list_variables()
{
    # by enabling ``posix'' mode we tell ``set'' not to print function names
    (
        set -o posix
        set                                                         \
            | grep -o '^[_[:alpha:]][_[:alnum:]]*'                  \
            | grep -v -E '^PATH$|^PWD$|^USER$|^TERM$|^SSH_.*|^LC_.*'
    )
}


#@method
function bashlets_basic_env_list_variables_full()
{
    # by enabling ``posix'' mode we tell ``set'' not to print function names
    (
        set -o posix
        set                                                         \
            | grep -o '^[_[:alpha:]][_[:alnum:]]*'
    )
}

