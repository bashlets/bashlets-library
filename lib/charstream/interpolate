source bashlet os/tempfile
source bashlet marshal/uneval


function __bashlets_charstream_interpolate_callback_plain()
{
    local input="$1"
    local context_handler  # ignored
    local sedexp
    local key key2 value

    [[ -e $input ]] || return 1

    sedexp=$(cat "$input" | while read key
        do
            key2="$(echo $key | tr @ $)"
            # get a value for VAR from the environment
            value="$(eval echo "$key2")"
            # escape path for sed
            value="${value//\//\\/}"
            # construct a list of sed substitutions
            [[ -n $key && -n $value ]] && echo "-e s/$key/$value/g"
        done | sed 'N; s/\n/ /')

    echo "$sedexp"
}

function __bashlets_charstream_interpolate_callback_uneval()
{
    local input="$1"
    local context_handler="$2"
    local sedexp
    local key key2 value

    [[ -e $input && -n $context_handler ]] || return 1

    sedexp=$(cat "$input" | while read key
        do
            key2="$(echo $key | tr -d @)"
            # get a value for VAR from the context
            value="$(
                $BASHLETS_NAMESPACE uneval get_by_key "$context_handler" "$key2"
            )"
            # escape path for sed
            value="${value//\//\\/}"
            # construct a list of sed substitutions
            [[ -n $key && -n $value ]] && echo "-e s/$key/$value/g"
        done | sed 'N; s/\n/ /')

    echo "$sedexp"
}


# safely substitute @var tokens with values from shell variables of the same
# name (or from a marshal context, if assigned)

#@method
function bashlets_charstream_interpolate_eval()
{
    local context="$1"
    local context_handler="$2"
    local input="$3"
    local output="$4"

    [[ -n $context ]] || return

    local note1 note2
    local callback sedexp regexp='@[A-Za-z0-9_]\+'
    local stage1="$($BASHLETS_NAMESPACE tempfile create)"
    local stage2="$($BASHLETS_NAMESPACE tempfile create)"

    # build a list of @var's

    (test -e "$input" && cat "$input" || cat)             \
        | tee -a "$stage1"                      $note1    \
        | sed "s/$regexp/&\n/g"                 $note2    \
        | sed -n "s/.*\($regexp\).*/\1/p"                 \
            > "$stage2"

    # $note1  copy the input stream

    # $note2  this is tricky since there might be many occurrences
    #         of the same @var all in a row

    case "$context"
    in
        plain)
            callback=__bashlets_charstream_interpolate_callback_plain
            ;;
        uneval)
            callback=__bashlets_charstream_interpolate_callback_uneval
            ;;
        *)
            echo "Wrong context!"
            return 1
            ;;
    esac

    # read and parse the list constructed above
    sedexp="$("$callback" "$stage2" "$context_handler")" || return 1

    # apply substitutions (no quotes around $sedexp!)
    [[ -n $sedexp ]] && sed $sedexp < "$stage1"         \
        | (test -n "$output" && cat > "$output" || cat)

    # cleanup
    $BASHLETS_NAMESPACE tempfile destroy "$stage1"
    $BASHLETS_NAMESPACE tempfile destroy "$stage2"
}


# evaluates expressions inside a @,@ pair of delimiters

#@method
function bashlets_charstream_interpolate_eval2()
{
    # these hold the constant buffer and the buffer to be eval'ed, respect.
    local textbuffer codebuffer

    function __bashlets_charstream_interpolate_textbuffer_create()
    {
        textbuffer="$($BASHLETS_NAMESPACE tempfile create)"
    }

    function __bashlets_charstream_interpolate_textbuffer_append()
    {
        [[ -n "$1" ]] && printf "%c" "$1" >> "$textbuffer"
    }

    function __bashlets_charstream_interpolate_textbuffer_dump()
    {
        cat "$textbuffer"
        echo
    }

    function __bashlets_charstream_interpolate_textbuffer_destroy()
    {
        $BASHLETS_NAMESPACE tempfile destroy "$textbuffer"
    }

    function __bashlets_charstream_interpolate_codebuffer_create()
    {
                         $BASHLETS_NAMESPACE tempfile exists "$codebuffer"  \
        || codebuffer="$($BASHLETS_NAMESPACE tempfile create)"
    }

    function __bashlets_charstream_interpolate_codebuffer_append()
    {
        printf "%c" "$1" >> "$codebuffer"
    }

    function __bashlets_charstream_interpolate_codebuffer_eval()
    {
        eval "$(cat "$codebuffer")" >> "$textbuffer"
    }

    function __bashlets_charstream_interpolate_codebuffer_destroy()
    {
        $BASHLETS_NAMESPACE tempfile destroy "$codebuffer"
    }


    local status=text

    while IFS= read -r line
    do

        __bashlets_charstream_interpolate_textbuffer_create

        echo "$line" | while IFS= read -r -n 1 c
        do
            case $status in
                text)
                    if [[ $c == @ ]]
                    then
                        status=code
                        continue
                    else
                        __bashlets_charstream_interpolate_textbuffer_append "$c"
                    fi
                    ;;
                code)
                    if [[ $c == @ ]]
                    then
                        status=text
                        __bashlets_charstream_interpolate_codebuffer_eval
                        __bashlets_charstream_interpolate_codebuffer_destroy
                        continue
                    else
                        __bashlets_charstream_interpolate_codebuffer_create
                        __bashlets_charstream_interpolate_codebuffer_append "$c"
                    fi
                    ;;
                *)
                    return 1  # TODO error (and cleanup)
                    ;;
            esac
        done

        __bashlets_charstream_interpolate_textbuffer_dump
        __bashlets_charstream_interpolate_textbuffer_destroy

    done

    unset __bashlets_charstream_interpolate_textbuffer_create
    unset __bashlets_charstream_interpolate_textbuffer_append
    unset __bashlets_charstream_interpolate_textbuffer_dump
    unset __bashlets_charstream_interpolate_textbuffer_destroy
    unset __bashlets_charstream_interpolate_codebuffer_create
    unset __bashlets_charstream_interpolate_codebuffer_append
    unset __bashlets_charstream_interpolate_codebuffer_eval
    unset __bashlets_charstream_interpolate_codebuffer_destroy
}

# Local variables:
# mode: shell-script
