#@method
function bashlets_charstream_reshape_join_lines()
{
    local del="$1"

    # use GNU head(1) to remove the last newline in the input
    head -c -1 | ([[ -n "$del" ]] && tr "\n" "$del" || tr -d "\n")
}

#@method
function bashlets_charstream_reshape_transpose()
{
    bashlets_charstream_reshape_join_lines
}

#@method
function bashlets_charstream_reshape_as_string()
{
    bashlets_charstream_reshape_join_lines
}


