#@method
function bashlets_datatype_keyvalues_list_keys()
{
	local fs="$1"
    test -n "$fs" || fs=$(echo -en "\034")
    cut -d$fs -f1 | sort -u
}

#@method
function bashlets_datatype_keyvalues_list_values()
{
	local fs="$2"
    test -n "$fs" || fs=$(echo -en "\034")
    cut -d$fs -f2 | sort -u
}

#@method
function bashlets_datatype_keyvalues_get_by_key()
{
    local key="$1"
	local fs="$2"
    test -n "$fs" || fs=$(echo -en "\034")
    awk -F$fs "\$1 == \"$key\" {print \$2}"
}

#@method
function bashlets_datatype_keyvalues_get_by_value()
{
    local value="$1"
	local fs="$2"
    test -n "$fs" || fs=$(echo -en "\034")
    awk -F$fs "\$2 == \"$value\" {print \$1}"
}

