source bashlet datatype/number

#@method
function bashlets_datatype_float_validate()
{
    $BASHLETS_NAMESPACE number validate_as_float "$1"
}

#@method
function bashlets_datatype_float_diff()
{
    local x="$1"
    local y="$2"
    local scale="${3:-2}"

    $BASHLETS_NAMESPACE number validate_as_float "$1" || return 1
    $BASHLETS_NAMESPACE number validate_as_float "$2" || return 1

    LC_NUMERIC=C printf "%.${scale}f\n" "$(echo "$x - $y" | bc)"
}


