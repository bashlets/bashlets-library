source bashlet os/tempdir

#@method
function bashlets_os_ramdisk_create()
{
    local size="${1:-10m}"
    local fs_type=${2:-tmpfs}
    local path="$3"

    if test $(whoami) = "root"
    then
        [[ -d "$path" ]] || path="$($BASHLETS_NAMESPACE tempdir create)"
        mount -t $fs_type -o size=$size $fs_type "$path"
    else
        path="$($BASHLETS_NAMESPACE tempdir create /tmp/shm)"
    fi

    echo $path
}

#@method
function bashlets_os_ramdisk_destroy()
{
    local path="${1}"

    test -d "$path" || return

    if test $(whoami) = "root"
    then
        mount | grep "$path" && umount "$path"
    else
        $BASHLETS_NAMESPACE tempdir destroy "$path"
    fi
}


