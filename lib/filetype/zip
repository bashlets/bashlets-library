source bashlet charstream/append
source bashlet charstream/filter
source bashlet marshal/pairs
source bashlet os/tempfile


## WARNING: some versions of the zipnote(1) utilities might be buggy!
BASHLETS_FILE_ZIP_ZIPNOTE=zipnote

#@method
function bashlets_filetype_zip_get_comments()
{
    local filename="$1"
	local startmarker="@.*(zip file comment below this line)"

	$BASHLETS_FILE_ZIP_ZIPNOTE "$filename"  \
		| $BASHLETS_NAMESPACE filter after_pattern "$startmarker"
}

#@method
function bashlets_filetype_zip_set_comments()
{
    local filename="$1"
    local comments_filename="$2"
	local startmarker="@.*(zip file comment below this line)"
	local tempfile

	[ -e "$filename" ]          || return 1
	[ -e "$comments_filename" ] || return 1

    tempfile="$($BASHLETS_NAMESPACE tempfile create)"

	# extract header
	$BASHLETS_FILE_ZIP_ZIPNOTE "$filename"                          \
		| $BASHLETS_NAMESPACE filter till_pattern "$startmarker"    \
		> "$tempfile"

	# append comments
	cat "$tempfile"                                                 \
		| $BASHLETS_NAMESPACE append after_pattern                  \
			"$comments_filename"                                    \
			"$startmarker"                                          \
		| $BASHLETS_FILE_ZIP_ZIPNOTE -w "$filename"

    $BASHLETS_NAMESPACE tempfile destroy "$tempfile"
}

#@method
function bashlets_filetype_zip_get_comment_by_key()
{
    local filename="$1"
	local key="$2"

	bashlets_filetype_zip_get_comments $filename  \
		| $BASHLETS_NAMESPACE pairs get_by_key "$key"
}

#@method
function bashlets_filetype_zip_set_comment_by_key()
{
    local filename="$1"
	local key="$2"
	shift 2
	local value="$@"
	local comments_tempfile
	local retval

	[ -e "$filename" ] || return 1

    comments_tempfile="$($BASHLETS_NAMESPACE tempfile create)"

	bashlets_filetype_zip_get_comments $filename                    \
		| $BASHLETS_NAMESPACE pairs set_by_key "$key" "$value"      \
		> "$comments_tempfile"

	bashlets_filetype_zip_set_comments "$filename" "$comments_tempfile"
	retval=$?

	$BASHLETS_NAMESPACE tempfile destroy "$comments_tempfile"

	return $retval
}


