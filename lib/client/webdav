# NOTE: requires curl

source bashlet marshal/uneval


#@method
function bashlets_client_webdav_get_handler()
{
    $BASHLETS_NAMESPACE uneval create
}

#@method
function bashlets_client_webdav_release_handler()
{
    :
}

#@method
function bashlets_client_webdav_get_param()
{
    local handler="$1"
    local key="$2"

    [[ -n $handler && -n $key ]] || return

    echo "$($BASHLETS_NAMESPACE uneval get_by_key "$handler" "$key")"
}

#@method
function bashlets_client_webdav_set_param()
{
    local handler="$1"
    local key="$2"
    local value="$3"

    [[ -n $handler && -n $key ]] || return

    $BASHLETS_NAMESPACE uneval add_pair "$handler" "$key" "$value"
}

#@method
function bashlets_client_webdav_get_base_uri()
{
    local handler="$1"
    bashlets_client_webdav_get_param "$handler" base_uri
}

#@method
function bashlets_client_webdav_set_base_uri()
{
    local handler="$1"
    local base_uri="$2"
    bashlets_client_webdav_set_param "$handler" "base_uri" "$base_uri"
}

#@method
function bashlets_client_webdav_get_password()
{
    local handler="$1"
    bashlets_client_webdav_get_param "$handler" password
}

#@method
function bashlets_client_webdav_set_password()
{
    local handler="$1"
    local password="$2"
    bashlets_client_webdav_set_param "$handler" "password" "$password"
}

#@method
function bashlets_client_webdav_get_username()
{
    local handler="$1"
    bashlets_client_webdav_get_param "$handler" username
}

#@method
function bashlets_client_webdav_set_username()
{
    local handler="$1"
    local username="$2"
    bashlets_client_webdav_set_param "$handler" "username" "$username"
}


# Returns true if the given target is a file.

#@method
function bashlets_client_webdav_isfile()
{
    local handler="$1"
	local path="$2"
	local target="$3"
	local base_uri="$(bashlets_client_webdav_get_base_uri "$handler")"
	local username="$(bashlets_client_webdav_get_username "$handler")"
	local password="$(bashlets_client_webdav_get_password "$handler")"

	curl -m 1 -s                               \
		-u "$username:$password"               \
		-X HEAD                                \
		"$base_uri/$path/$target"
}

# Creates a resource. 

#@method
function bashlets_client_webdav_create()
{
    local handler="$1"
	local target="$2"
	local base_uri="$(bashlets_client_webdav_get_base_uri "$handler")"
	local username="$(bashlets_client_webdav_get_username "$handler")"
	local password="$(bashlets_client_webdav_get_password "$handler")"

	curl -s                                    \
		-u "$username:$password"               \
		-X MKCOL                               \
		"$base_uri/$target"
}

# Touches a resource.

#@method
function bashlets_client_webdav_touch()
{
    local handler="$1"
	local path="$2"
	local target="$3"
	local base_uri="$(bashlets_client_webdav_get_base_uri "$handler")"
	local username="$(bashlets_client_webdav_get_username "$handler")"
	local password="$(bashlets_client_webdav_get_password "$handler")"

	curl -s                                    \
		-u "$username:$password"               \
		-X PUT                                 \
		-H "Content-Length: 0 "                \
		"$base_uri/$path/$target"
}

# Copies a resource.

#@method
function bashlets_client_webdav_copy()
{
    local handler="$1"
	local source="$2"
	local target="$3"
	local base_uri="$(bashlets_client_webdav_get_base_uri "$handler")"
	local username="$(bashlets_client_webdav_get_username "$handler")"
	local password="$(bashlets_client_webdav_get_password "$handler")"

	curl -s                                    \
		-u "$username:$password"               \
		-X COPY                                \
		-H "Destination: $base_uri/$target"    \
		"$base_uri/$source"
}

# Moves a resource.

#@method
function bashlets_client_webdav_move()
{
    local handler="$1"
	local source="$2"
	local target="$3"
	local base_uri="$(bashlets_client_webdav_get_base_uri "$handler")"
	local username="$(bashlets_client_webdav_get_username "$handler")"
	local password="$(bashlets_client_webdav_get_password "$handler")"

	curl -s                                    \
		-u "$username:$password"               \
		-X MOVE                                \
		-H "Destination: $base_uri/$target"    \
		"$base_uri/$source"
}


