source bashlet marshal/uneval


#@method
function bashlets_client_svn_connect()
{
    $BASHLETS_NAMESPACE uneval create
}

#@method
function bashlets_client_svn_disconnect()
{
    :
}

#@method
function bashlets_client_svn_get_param()
{
    local repo="$1"
    local key="$2"

    [[ -n $repo && -n $key ]] || return

    echo "$($BASHLETS_NAMESPACE uneval get_by_key "$repo" "$key")"
}

#@method
function bashlets_client_svn_set_param()
{
    local repo="$1"
    local key="$2"
    local value="$3"

    [[ -n $repo && -n $key ]] || return

    $BASHLETS_NAMESPACE uneval add_pair "$repo" "$key" "$value"
}

#@method
function bashlets_client_svn_get_wd()
{
    local repo="$1"

    bashlets_client_svn_get_param "$repo" wd
}

#@method
function bashlets_client_svn_get_username()
{
    local repo="$1"

    bashlets_client_svn_get_param "$repo" username
}

#@method
function bashlets_client_svn_get_password()
{
    local repo="$1"

    bashlets_client_svn_get_param "$repo" password
}

#@method
function bashlets_client_svn_set_wd()
{
    local repo="$1"
    local wd="$2"

    bashlets_client_svn_set_param "$repo" wd "$wd"
}

#@method
function bashlets_client_svn_set_username()
{
    local repo="$1"
    local username="$2"

    bashlets_client_svn_set_param "$repo" username "$username"
}

#@method
function bashlets_client_svn_set_password()
{
    local repo="$1"
    local password="$2"

    bashlets_client_svn_set_param "$repo" password "$password"
}

#@method
function bashlets_client_svn_touch()
{
    local repo="$1"
    local object="$2"
    local rev="${3:-HEAD}"

    local wd="$(bashlets_client_svn_get_wd "$repo")"
    local username="$(bashlets_client_svn_get_username "$repo")"
    local password="$(bashlets_client_svn_get_password "$repo")"

    [[ -n $object && -d $wd ]] || return 1

    (
        cd "$wd" || return 1

        local dirname="$(dirname "$object")"

        test -n "$dirname" && test ! -d "$dirname" && mkdir -p "$dirname"
        touch "$object"

        echo "$object"
    )
}

#@method
function bashlets_client_svn_checkout()
{
    local repo="$1"
    local object="$2"
    local rev="${3:-HEAD}"

    local wd="$(bashlets_client_svn_get_wd "$repo")"
    local username="$(bashlets_client_svn_get_username "$repo")"
    local password="$(bashlets_client_svn_get_password "$repo")"

    [[ -n $object && -d $wd ]] || return 1

    (
        cd "$wd" || return 1

        svn checkout                                    \
            --quiet --non-interactive --no-auth-cache   \
            --revision "$rev"                           \
            --username "$username"                      \
            --password "$password"                      \
            "$object"
    )
}

#@method
function bashlets_client_svn_update()
{
    local repo="$1"
    local object="$2"
    local rev="${3:-HEAD}"

    local wd="$(bashlets_client_svn_get_wd "$repo")"
    local username="$(bashlets_client_svn_get_username "$repo")"
    local password="$(bashlets_client_svn_get_password "$repo")"

    [[ -n $object && -d $wd ]] || return 1

    (
        cd "$wd" || return 1

        svn update                                      \
            --quiet --non-interactive --no-auth-cache   \
            --revision "$rev"                           \
            --username "$username"                      \
            --password "$password"                      \
            "$object"
    )
}


#@method
function bashlets_client_svn_add()
{
    local repo="$1"
    local object="$2"

    local wd="$(bashlets_client_svn_get_wd "$repo")"
    local username="$(bashlets_client_svn_get_username "$repo")"
    local password="$(bashlets_client_svn_get_password "$repo")"

    [[ -n $object && -d $wd ]] || return 1

    (
        cd "$wd" || return 1

        svn add                                         \
            --quiet --non-interactive --no-auth-cache   \
            --force --parents                           \
            --username "$username"                      \
            --password "$password"                      \
            "$object"
    )
}

#@method
function bashlets_client_svn_commit()
{
    local repo="$1"
    local object="$2"
    shift 2

    local wd="$(bashlets_client_svn_get_wd "$repo")"
    local username="$(bashlets_client_svn_get_username "$repo")"
    local password="$(bashlets_client_svn_get_password "$repo")"

    [[ -n $object && -d $wd ]] || return 1

    (
        cd "$wd" || return 1

        svn commit                                      \
            --quiet --non-interactive --no-auth-cache   \
            --username "$username"                      \
            --password "$password"                      \
            --message  "$@"                             \
            "$object"
    )
}


# Local variables:
# mode: shell-script
# sh-basic-offset: 4
# sh-indent-comment: t
# indent-tabs-mode: nil
# End:
