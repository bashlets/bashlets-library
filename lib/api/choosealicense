source bashlet charstream/strip

BASHLETS_API_CHOOSEALICENSE_URL="http://choosealicense.com/licenses/"


#@method
function bashlets_api_choosealicense_get_license()
{
    local   license="${1:-gpl-3.0}"

    curl -s "$BASHLETS_API_CHOOSEALICENSE_URL/$license/"  \
        | sed -n '/<pre id="license-text">/,/<\/pre>/p'   \
        | $BASHLETS_NAMESPACE strip leading_spaces        \
        | $BASHLETS_NAMESPACE strip html_tags
}

#@method
function bashlets_api_choosealicense_list_licenses()
{
    echo mit           # MIT License
    echo apache-2.0    # Apache License 2.0
    echo gpl-3.0       # GNU General Public License v3.0

    echo agpl-3.0      # GNU Affero General Public License v3.0
    echo lgpl-3.0      # GNU General Public License v3.0
    echo mpl-2.0       # Mozilla Public License 2.0

    # Non-Software Licenses
    echo cc0-1.0       # Creative Commons Zero v1.0 Universal
    echo cc-by-4.0     # Creative Commons Attribution 4.0
    echo cc-by-sa-4.0  # Creative Commons Attribution Share Alike 4.0

    # Fonts
    echo ofl-1.1       # SIL Open Font License 1.1

    echo unlicense     # The Unlicense
}

# Local variables:
# mode: shell-script
